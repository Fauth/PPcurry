<Window x:Class="PPcurry.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PPcurry"
        mc:Ignorable="d"
        Title="PPcurry"
        MinWidth="600"
        MinHeight="400" >
    <DockPanel Name="MainPanel" >
        <ScrollViewer DockPanel.Dock="Left" >
            <StackPanel VerticalAlignment="Stretch" Name="ComponentsPanel" DockPanel.Dock="Left" Background="#FF9EC2F5" >
            </StackPanel>
        </ScrollViewer>
        <Rectangle DockPanel.Dock="Left" Height="Auto" Width="3" Fill="Black" />

        <StackPanel  DockPanel.Dock="Right" Width="Auto" Height="Auto" MinWidth="200" MinHeight="200" >
            <Canvas Name="BoardCanvas" />
        </StackPanel>
    </DockPanel>
</Window>
